#!/bin/bash

source './bin/shared/strict-mode.sh'

# By using the same mnemonic, ganache-cli generates the same keys which means
# our contracts deploy to the same addresses!
export mnemonic="robot robot robot robot robot robot robot robot robot robot robot robot"

./node_modules/.bin/ganache-cli \
  --mnemonic "$mnemonic"        \
  --gasLimit 100000000          \
  --hostname 127.0.0.1      \
  --hostname localhost          \
  --networkId 42                \
  --blockTime 1                 \
  --port 8545 &

# Wait until this process is killed
wait %1
